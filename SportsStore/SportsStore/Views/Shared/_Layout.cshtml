<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SportsStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <div class="bg-dark text-white p-2">
        <span class="navbar-brand ml-2">SPORTS STORE</span>
    </div>
    <div class="row m-1 p-1">
        <div id="categories"  class="col-2"  >
            Put something useful here later
        </div>
        <div class="col-10">
            @RenderBody()
        </div>
    </div>

    <footer class="page-footer border-top footer bg-dark text-white">
        <!-- Copyright -->
        <div class="footer-copyright text-center py-3">
            © 2020 Copyright:
            <a href="https://mdbootstrap.com/"> MDBootstrap.com</a>
        </div>
        <!-- Copyright -->

    </footer>


    @*<footer class="border-top footer bg-dark text-white">
            <div class="container">
                &copy; 2020 - SportsStore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $("#categories").click(function (e) {
            e.preventDefault();

            var hasclass = $("#categories").hasClass('col-2');
            console.log(hasclass);

            if (hasclass) {
                $("#categories").removeClass('col-2');
                $("#categories").addClass('left-panel');

                localStorage.setItem('currentclass', 'left-panel');
            }
            else {
                $("#categories").removeClass('left-panel');
                $("#categories").addClass('col-2');

                localStorage.setItem('currentclass', 'col-2');
            }
            
        });

        $(function () {
            var hasClass = localStorage.getItem('currentclass');
            if (hasClass == 'left-panel') {
                $("#categories").removeClass('col-2');
                $("#categories").addClass('left-panel');
            }
            else {
                $("#categories").removeClass('left-panel');
                $("#categories").addClass('col-2');
            }
            console.log(hasClass);
        });

    </script>


    @RenderSection("Scripts", required: false)
</body>



